mixin selectTree(items, level = 1, parent_Id = "") 
  each item in items  
    - const prefix = '&nbsp;'.repeat((level - 1) * 3);
    option(
      value=item._id
      selected=(String(item._id) == String(parent_Id))
    )!= `${prefix}${item.title}`
      if Array.isArray(item.children) && item.children.length > 0
        +selectTree(item.children, level + 1, parent_Id)

mixin selectTreeProduct(items, level = 1, productCategory = "") 
  each item in items  
    - const prefix = '&nbsp;'.repeat((level - 1) * 3);
    option(
      value=item._id
      selected=(String(item._id) == String(productCategory))
    )!= `${prefix}${item.title}`
      if Array.isArray(item.children) && item.children.length > 0
        +selectTree(item.children, level + 1, parent_Id)
