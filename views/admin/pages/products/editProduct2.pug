extend ../../layout/default.pug

block main 

  h1.title #{title}

  form(
    action=`${prefixAdmin}/product/edit/${product.id}?_method=PATCH`
    method="POST"
    enctype="multipart/form-data"
    id="form-edit-product"
  ) 
    .container-fluid.pt-2
      .row
        .col-8
          // Card general information - start
          .card.shadow-css.p-3.mb-5
            .card-body
              h3.card-title.pb-3 General Information
              .row
                label.form-label(for='') Name Product
                input.mb-4.form-control(type='' id='' placeholder='Input name product ...')
                label.form-label(for='') Description Product
                textarea.form-control(id='' rows='4')
              .row.mt-5
                .col
                  h6.lh-1 Size
                  small.opacity-50 Pick Available Size
                  div
                    input#size-xs.btn-check(type='checkbox' name='size-options' autocomplete='off')
                    label.btn.btn-outline-success.me-2(for='size-xs') XS
                    input#size-s.btn-check(type='checkbox' name='size-options' autocomplete='off')
                    label.btn.btn-outline-success.me-2(for='size-s') S
                    input#size-m.btn-check(type='checkbox' name='size-options' autocomplete='off')
                    label.btn.btn-outline-success.me-2(for='size-m') M
                    input#size-xl.btn-check(type='checkbox' name='size-options' autocomplete='off')
                    label.btn.btn-outline-success.me-2(for='size-xl') XL
                    input#size-xxl.btn-check(type='checkbox' name='size-options' autocomplete='off')
                    label.btn.btn-outline-success(for='size-xxl') XXL
                .col
                  h6.lh-1 Size
                  small.opacity-50 Pick Available Size
                  .d-flex.pt-2
                    .form-check.me-4
                      input#gender-men.form-check-input(type='radio' name='gender-options' value='men')
                      label.form-check-label(for='gender-men')
                        | Men
                    .form-check.me-4
                      input#gender-woman.form-check-input(type='radio' name='gender-options' value='woman' checked='')
                      label.form-check-label.text-success(for='gender-woman')
                        | Woman
                    .form-check
                      input#gender-unisex.form-check-input(type='radio' name='gender-options' value='unisex')
                      label.form-check-label(for='gender-unisex')
                        | Unisex
              .row.mt-3
                h6.lh-1 Status
                small.opacity-50 Pick Available Status

                div(class="form-check ml-2")
                  input#statusActive.form-check-input(type='radio' name='status' value='active' checked)
                  label.form-check-label.mr-5(for='statusActive') Active

                  input#statusInactive.form-check-input(type='radio' name='status' value='inactive')
                  label.form-check-label(for='statusInactive') Inactive


          // Card general information - end

          // Card pricing and stock - start
          .card.shadow-css.p-3.mb-5
            .card-body
              h3.card-title.pb-3 Pricing And Stock
              .row.mb-4
                .col
                  label.form-label(for='') Base Pricing
                  input.form-control(type='text' id='')
                .col
                  .row
                    .col 
                      label(for="") Chosse Size 
                      select.form-select
                        option(value="" disable) Size 
                        option(value="x") X 
                        option(value="m") M   
                    .col 
                      label(for="") Stock Size 
                      input.form-control(type="text")
                    .col 
                      label(for="") Stock 
                      input.form-control(type="text" value="20" disabled)
              .row
                .col
                  label.form-label(for='') Discount
                  input.form-control(type='text' id='')
                .col
                  label.form-label(for='') Discount Type
                  select.form-select(name='' id='')
          // Card pricing and stock - end
        .col-4
          // Card upload image - start
          .card.shadow-css.p-3.mb-5
            .card-body
              h3.card-title.pb-3 Upload Image
              .row
                .col-12
                  label.label-image(for='form-image-0')
                    input#form-image-0.form-image(type='file' accept='image/*' hidden='')
                    .show-image
                      div
                        i.fa-solid.fa-plus(style='color: #ffffff;')
              .row.p-3.gap-2
                .col.image
                  label.label-image(for='form-image-1')
                    input#form-image-1.form-image(type='file' accept='image/*' hidden='')
                    .show-image
                      div
                        i.fa-solid.fa-plus(style='color: #ffffff;')
                .col.image
                  label.label-image(for='form-image-2')
                    input#form-image-2.form-image(type='file' accept='image/*' hidden='')
                    .show-image
                      div
                        i.fa-solid.fa-plus(style='color: #ffffff;')
                .col.image
                  label.label-image(for='form-image-3')
                    input#form-image-3.form-image(type='file' accept='image/*' hidden='')
                    .show-image
                      div
                        i.fa-solid.fa-plus(style='color: #ffffff;')
                .col.image
                  label.label-image(for='form-image-4')
                    input#form-image-4.form-image(type='file' accept='image/*' hidden='')
                    .show-image
                      div
                        i.fa-solid.fa-plus(style='color: #ffffff;')
          // Card upload image - end
          // Card category - start
          .card.shadow-css.p-3.mb-5
            .card-body
              h3.card-title.pb-3 Category
              label.form-label(for='') Product Category
              select.form-select(name='' id='')
              button.btn.btn-success.mt-4 Add category
          // Card category - end

  script(src="/js/admin/fontend/labelImage.js")