extends ../../layout/default.pug


block main 

  h1=titlePage

  form(
    action=`${prefixAdmin}/role/edit/${record.id}?_method=PATCH`
    method="POST" 
    enctype="multipart/form-data"
  )
    div.form-group
      label(for="title") Tiêu đề
      input(
        type="text"
        id="title"
        name="title"
        class="form-control"
        required
        value=record.title
      ) 

    div.form-group
      label(for="desc") Mô tả
      input(
        type="text"
        id="desc"
        name="description"
        class="form-control"
        required
        value=record.description
      ) 

    div.form-group
      button(
        type="submit"
        class="btn btn-primary"
      ) Sửa nhóm quyền
